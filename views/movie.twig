{% extends 'layout.twig' %}

{% block content %}
    <div class="movie">
        <div class="movie__header">
            <h2>{{ title }} ({{ releaseDate|date("Y") }})</h2>

            {% if posterUrl is defined %}
                <img src="{{ posterUrl }}?w=240" />
            {% endif %}
        </div>

        <h2>Cast</h2>
        <ul class="list">
        {% for cast in cast %}
            <li>
                <a href="{{ path('person', {id: cast.person._id}) }}">
                    {% if cast.person.imageUrl is defined %}
                        <img src="{{ cast.person.imageUrl }}?w=240" />
                    {% endif %}

                    {{ cast.person.name }} as {{ cast.characterName }}
                </a>
            </li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
